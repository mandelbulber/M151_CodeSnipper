@using CodeSnipper_Web.ViewModels;
@model List<CodeSnipper_Web.ViewModels.SnippetViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<h1 style="margin-top: 50px;">Share your CodeSnippets</h1>
<hr style="margin-bottom: 50px;" />

<div class="text-center">
    <div class="row">
        @foreach (SnippetViewModel snippet in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3" style="margin-top: 30px;">
                <div>
                    <partial name="/Views/Shared/Snippet.cshtml" model="snippet" />
                </div>
            </div>
        }
    </div>
</div>