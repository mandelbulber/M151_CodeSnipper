@using CodeSnipper_Web.ViewModels;
@model List<CodeSnipper_Web.ViewModels.SnippetViewModel>
@{
    ViewData["Title"] = "My Snippets";
}

<div class="text-center">
    <div class="row">
        @foreach (SnippetViewModel snippet in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div>
                    <partial name="/Views/Shared/Snippet.cshtml" model="snippet" />
                </div>
                <div style="margin-bottom: 4em;">
                    <button onclick="copy()">Copy</button>
                    <button type="button" onclick="location.href='@Url.Action("Index","Edit", new {id = snippet.Id})'">Edit</button>
                    <form asp-action="Index" asp-controller="Delete" method="post" onSubmit="if(!confirm('Delete @snippet.Title?')){return false;}">
                        <input type="hidden" name="id" value="@snippet.Id" />
                        <input type="submit" value="Delete" />
                    </form>
                </div>
            </div>
        }
    </div>
</div>
